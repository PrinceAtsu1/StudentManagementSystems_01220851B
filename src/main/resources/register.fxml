<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.template.ui.controllers.RegisterController"
            id="registerRoot">

    <!-- LEFT FORM -->
    <left>
        <VBox spacing="16" styleClass="login-left" prefWidth="420">

            <Label text="Student Management System" styleClass="brand"/>

            <VBox spacing="6">
                <Label text="Create account" styleClass="login-title"/>
                <Label text="Fill in your details to get started" styleClass="login-subtitle"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Full name" styleClass="form-label"/>
                <TextField fx:id="fullNameField" promptText="Your name" styleClass="form-input"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Email address" styleClass="form-label"/>
                <TextField fx:id="emailField" promptText="name@example.com" styleClass="form-input"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Password" styleClass="form-label"/>
                <PasswordField fx:id="passwordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" styleClass="form-input"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Confirm password" styleClass="form-label"/>
                <PasswordField fx:id="confirmPasswordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" styleClass="form-input"/>
            </VBox>

            <Button text="Create account" onAction="#handleRegister" styleClass="primary-button" prefWidth="340"/>

            <HBox spacing="6" alignment="CENTER">
                <Label text="Already have an account?" styleClass="muted"/>
                <Hyperlink text="Sign in" onAction="#goToLogin" styleClass="link"/>
            </HBox>

            <Label fx:id="errorLabel" text="" styleClass="error-label" wrapText="true"/>

        </VBox>
    </left>

    <!-- RIGHT DECOR -->
    <center>
        <StackPane styleClass="login-right">

            <Circle radius="220" styleClass="bubble1" StackPane.alignment="TOP_RIGHT"/>
            <Circle radius="140" styleClass="bubble2" StackPane.alignment="BOTTOM_LEFT"/>
            <Circle radius="90" styleClass="bubble3" StackPane.alignment="CENTER_RIGHT"/>

            <VBox alignment="CENTER" spacing="10">
                <Label text="ðŸ“–" styleClass="login-emoji"/>
                <Label text="Create your admin account" styleClass="login-right-title"/>
                <Label text="Then login to continue" styleClass="login-right-subtitle"/>
            </VBox>

        </StackPane>
    </center>

</BorderPane>